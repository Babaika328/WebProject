generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Dish {
  idMeal       String @id
  name         String
  category     String?
  area         String?
  instructions String?   @db.Text
  ingredients  String?   @db.Text
  tags         String?
  thumb_file   String?

  @@map("dishes")
}


